# 忽略 WordPress 核心文件
/wp-admin/
/wp-includes/
/license.txt
/readme.html
/wp-config-sample.php

# 处理 wp-content 目录
/wp-content/*
!/wp-content/themes/
!/wp-content/plugins/
/wp-content/uploads/simply-static/
/wp-content/cache/
/wp-content/upgrade/
/wp-content/backups/
/wp-content/debug.log

# 忽略系统文件和临时文件
.DS_Store
*.log
*.bak
*.swp
*.swo
.env
.env.*

# 忽略其他缓存文件
/wp-content/cache/*
/wp-content/*cache*/

# 可选：如果需要跟踪上传文件，移除下面这行
/wp-content/uploads/
